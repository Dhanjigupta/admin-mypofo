<!DOCTYPE html>
<html class="transition-navbar-scroll top-navbar-xlarge bottom-footer" lang="en">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title> <%= title %> </title>
  <%- include('style'); %>
</head>
<body>
  <%- include('navbar'); %>
 <div class="parallax page-section bg-blue-300">
    <div class="container parallax-layer" data-opacity="true">
      <div class="media media-grid v-middle">
        <div class="media-body">
          <h3 class="text-display-1 text-white margin-none"> <%= title %> </h3>
        </div>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="page-section">
      <div class="row">
          <div class="col-md-12">
              <div class="panel panel-default">
                 <ul class="list-group">
                   <li class="list-group-item">
                    <div class="media v-middle">
                      <div class="media-body">
                        <h4 class="text-headline margin-none">Profile</h4>
                        <p class="text-subhead text-light">My Profile Details</p>
                      </div>
                     </div>
                    </li>
                  </ul>

                  <div class="panel-body paper-shadow relative" data-z="0.5">
                    <form class="form-horizontal" id="ProfileForm">
                        <div class="form-group">
                            <label for="ProfileImg" class="col-sm-2 control-label">Profile Photo</label>
                            <div class="col-md-10">
                                <div class="media v-middle">
                                    <div class="media-left">
                                        <div class="icon-block width-100 bg-grey-100">
                                            <img src="/profiles/<%= records.user_image %>" id="profilepic" class="img-circle" style="width: 72px; height: 72px;"/>
                                        </div>
                                    </div>
                                    <div class="media-body">
                                        <input placeholder="Change Pic" type="file" id="ProfileImg" name="ProfileImg" onchange="readURL(this,'ProfileImg');"   />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="uName" class="col-md-2 control-label">User Name</label>
                            <div class="col-md-10">
                                <div class="row">
                                   <div class="col-md-12">
                                     <div class="form-control-material static required">
                                        <input style="text-transform: capitalize;" maxlength="80" type="text" class="form-control used" id="uName" name="Uname" placeholder="User Name" value="<%= records.user_name %>" readonly="readonly">
                                     </div>
                                    </div>
                               </div>
                            </div>
                        </div>
                        <div class="form-group">
                          <label for="fname" class="col-md-2 control-label">Full Name</label>
                          <div class="col-md-10">
                              <div class="row">
                                 <div class="col-md-12">
                                      <div class="form-control-material static required">
                                          <input style="text-transform: capitalize;" maxlength="80" type="text" class="form-control used" id="fname" name="Fname" placeholder="Full Name" value="<%= records.user_fullname %>">
                                      </div>
                                  </div>
                             </div>
                          </div>
                      </div>
                        <div class="form-group">
                            <label for="email" class="col-md-2 control-label">Email</label>
                            <div class="col-md-10">
                                <div class="form-control-material static required">
                                   <input type="email" class="form-control used" name="Email" id="email" placeholder="Email" value="<%= records.user_email %>" >
                               </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="mobile" class="col-md-2 control-label">Mobile</label>
                            <div class="col-md-10">
                                <div class="form-control-material static required">
                                  <input type="text" class="form-control used" placeholder="Mobile" name="Mobile" id="mobile" value="<%= records.user_mobile %>" maxlength="10" >
                               </div>
                            </div>
                        </div>
                       
                         <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                               <input type="hidden" name="Id" id="id" value="<%= records._id %>">
                               <button type="button" id="btn-submit" class="btn btn-success paper-shadow relative" data-z="0.5" data-hover-z="1" data-animated> <i class="fa fa-check-circle"></i>&nbsp Save Changes</button>
                            </div>
                        </div>
                    </form>
                  </div>
              </div>
          </div>
      </div>
    </div>
  </div>
<%- include('footer'); %>
<script src="js/bootstrap-filestyle.js"></script>
<script src="/jquery/about.js"></script>
<script>
  $('#ProfileImg').filestyle({
      buttonBefore : true,
      input:false,
      size:'sm',
      buttonName : 'btn-danger'
  });
  $("#ProfileImg").filestyle({buttonText: "Change Pic"});
</script>  
</body>
</html>